<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/cart_display_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:maxWidth="100dp"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/cast_album_art_placeholder" />

        <TextView
            android:id="@+id/cart_display_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="14dp"
            android:layout_toEndOf="@+id/cart_display_image"
            android:padding="5dp"
            android:text="Sample Product" />

        <TextView
            android:id="@+id/cart_display_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cart_display_title"
            android:layout_toEndOf="@+id/cart_display_image"
            android:padding="5dp"
            android:text="399" />

        <TextView
            android:id="@+id/cart_display_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cart_display_price"
            android:layout_toEndOf="@+id/cart_display_image"
            android:padding="5dp"
            android:text="Sample Product" />
        <TextView
            android:id="@+id/cart_display_datetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cart_display_quantity"
            android:layout_toEndOf="@+id/cart_display_image"
            android:padding="5dp"
            android:text="Sample Product" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/remove_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/cart_display_title"
            android:layout_alignParentEnd="true"
            android:clickable="true"
            android:visibility="invisible"
            app:backgroundTint="#ffffff"
            app:elevation="1dp"
            app:fabSize="mini"
            app:srcCompat="@android:drawable/ic_delete" />

    </RelativeLayout>

</android.support.v7.widget.CardView>